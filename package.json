{
  "name": "starscalendars",
  "version": "0.1.0",
  "description": "Spiritual astronomy platform with 3D visualization, WASM calculations, and Telegram integration (NO DOCKER - manual AlmaLinux 9.4 deployment)",
  "private": true,
  "type": "module",
  "workspaces": [
    "frontend",
    "wasm-astro",
    "dioxus-app",
    "i18n"
  ],
  "scripts": {
    "build": "pnpm run build:wasm && pnpm run build:frontend && pnpm run build:dioxus && cargo build --release",
    "build:frontend": "pnpm --filter frontend build",
    "build:dioxus": "pnpm --filter dioxus-app build",
    "build:wasm": "./scripts/build-wasm.sh",
    "build:wasm:debug": "cd wasm-astro && wasm-pack build --dev --target web --out-dir pkg",
    "build:i18n": "pnpm run -r build:i18n",
    "dev": "concurrently \"pnpm run dev:frontend\" \"pnpm run dev:backend\" \"pnpm run dev:dioxus\" \"pnpm run dev:telegram\"",
    "dev:full": "./scripts/dev-full.sh",
    "dev:frontend": "pnpm --filter starscalendars-frontend dev",
    "dev:frontend-only": "./scripts/dev-frontend.sh",
    "dev:backend": "cargo run -p backend",
    "dev:dioxus": "pnpm --filter dioxus-app dev",
    "dev:telegram": "cargo run -p telegram-bot",
    "type-check": "pnpm run -r type-check",
    "lint": "pnpm run -r lint",
    "format": "pnpm run -r format",
    "clean": "pnpm run -r clean && rm -rf node_modules/.pnpm && rm -rf wasm-astro/pkg",
    "clean:wasm": "rm -rf wasm-astro/pkg",
    "test": "pnpm run -r test",
    "test:wasm": "node --experimental-wasm-modules scripts/test-wasm.js",
    "quality-check": "make quality-check",
    "pre-commit": "make pre-commit"
  },
  "devDependencies": {
    "@babylonjs/procedural-textures": "8",
    "@types/node": "22",
    "@typescript-eslint/eslint-plugin": "8",
    "@typescript-eslint/parser": "8",
    "concurrently": "9",
    "eslint": "9",
    "prettier": "3",
    "simple-git-hooks": "2",
    "typescript": "5",
    "vite": "7"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.12.1",
  "keywords": [
    "astronomy",
    "astrology",
    "spiritual",
    "3d-visualization",
    "babylonjs",
    "webassembly",
    "rust",
    "telegram",
    "real-time"
  ],
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "https://github.com/GODCRM/starscalendars.git"
  }
}
